<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
    <style>
        .alert {
            text-align: center;
            width: 65%;
        }

        td {
            padding: 10px
        }

        .card {
            border-radius: 15px;
            box-shadow: 8px 8px 15px gray;
        }

        .inputtext {

            border-radius: 10px;
        }

        .label {
            margin-right: 30px;
            font-weight: bold;
        }
    </style>
</head>


<body>
    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <div class="container-scroller">
        <!-- partial:/partials/_navbar.html -->
        {{>navbar}}
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:/partials/_sidebar.html -->
            {{>slidebar}}
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    {{#if message}}
                    <div style="text-align: center" class="alert alert-{{message.type}}">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>{{message.intro}}</strong> {{message.message}}
                    </div>
                    {{/if}}

                    <div class="row">
                        <div class="col-lg-8 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Contact Us </h4>
                                    <br>
                                    <table>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <label class="label">Name </label>
                                                </td>
                                                <td>
                                                    {{records.name}} <br>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <label class="label">Email</label>
                                                </td>
                                                <td>
                                                    {{records.email}}
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>
                                                    <label class="label">Message</label>
                                                </td>
                                                <td>
                                                    {{records.message}}
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="2" align="center">
                                                    <a href="/deletemessage/{{records._id}}"
                                                        style="text-decoration:none ; color:black"><button
                                                            class="btn btn-outline-danger btn-rounded btn-sm">Delete
                                                        </button></a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                        <br>
                    </div>

                </div>

                <!-- content-wrapper ends -->
                <!-- partial:/partials/_footer.html -->
                {{>footer}}
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/js/off-canvas.js"></script>
    <script src="/js/misc.js"></script>
    <!-- endinject -->

    <script>
        $(window).on('load', function () {

            $('#js-preloader').addClass('loaded');

        });
    </script>
    <!-- Custom js for this page -->
    <!-- End custom js for this page -->
</body>

</html>